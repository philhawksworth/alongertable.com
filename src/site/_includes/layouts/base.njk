    <style>{% include "css/main.css" %}</style>
    <title>{{ title }}</title>
  </head>
  <body class="{{ bodyClass }}" >

    <header>
      <div class="container">
        <h1 class="logo"><a href="/" title="Home">A Longer Table</a></h1>
